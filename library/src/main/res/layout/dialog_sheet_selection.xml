<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:theme="@style/Theme.SheetSelection">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/draggedIndicator"
        android:layout_width="?attr/sheetSelection_indicatorWidth"
        android:layout_height="?attr/sheetSelection_indicatorHeight"
        android:layout_gravity="center_horizontal"
        android:layout_margin="?attr/sheetSelection_indicatorMargin"
        android:visibility="gone"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardElevation="0dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="?attr/sheetSelection_itemHeight"
        android:gravity="center_vertical"
        android:paddingStart="?attr/sheetSelection_itemPadding"
        android:paddingEnd="?attr/sheetSelection_itemPadding"
        android:textAppearance="?attr/sheetSelection_textAppearanceTitle"
        tools:text="@tools:sample/lorem" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSelectionItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="10"
        tools:listitem="@layout/row_selection_item" />
</LinearLayout>
